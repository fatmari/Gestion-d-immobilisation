<h1 style="color:purple;font-family: 'MV Boli', arial, serif;">Gestionnaire des Affectation</h1>
<br /><br />
@(Html.Kendo().Grid<IMMO_AFFECTATION>()

        .Name("Affect")
    .AutoBind(true)


    .Columns(columns =>
                 {
                     columns.Bound(o => o.CODE).Width(100);
                     columns.Bound(o => o.LIBELLE).Width(100);
                     columns.Bound(o => o.RESPONSABLEACHAT).Width(100);




                     columns.Command(command =>
                                         {
                                             command.Edit().Text("Modifier").HtmlAttributes(new { Style = " width:106px" });
                                             command.Destroy().Text("Supprimer");

                                         }).Width(600);
                 })
    .DataSource(datasoure => datasoure.Ajax()
                                .Model(model => model.Id(record => record.CODE))
                                            .Read(read => read.Action("GetAllAff", "Historique"))
                                                    .Create(create => create.Action("Add", "Historique"))
                                                            .Update(update => update.Action("Update", "Historique"))
                                                            .Destroy(delete => delete.Action("Delete", "Historique"))






                                .PageSize(8)
                                
    )

    .Filterable()

    .ToolBar(toolbar => toolbar.Create().Text("Ajouter Affectation"))


    .Editable(editable => editable.Mode(GridEditMode.InLine))

    .Sortable()

    .Selectable()
                


    .Pageable(pageable =>
                  {
                      pageable.Refresh(true);
                      pageable.PageSizes(true);
                  })
                      
)






