@using IMMO.DAL
@using IMMO.BLL
@using Immo_Demo.Models;
@using Kendo.Mvc.UI;

<div class="product-view k-widget">
    <div class="edit-buttons">
        <a class="k-button k-button-icontext k-edit-button" href="\\#"><span class="k-icon k-edit"></span></a>
        <a class="k-button k-button-icontext k-delete-button" href="\\#"><span class="k-icon k-delete"></span></a>
        @model Immo_Demo.Models.RoleLite
    </div>
    <table>
        <caption><img src="../Content/icone/role.png" alt="Role" width="150px" height="96px" /></caption>
        <tr>
            <td><font color="blue">Nom Groupe:</font></td>
            <td>@Html.EditorFor(m => m.RoleName)</td>
        </tr>
        <tr>
            <td colspan="2">
                <div class="edit-buttons">
                    <a class="k-button k-button-icontext k-update-button" href="\\#"><span class="k-icon k-update"></span></a>
                    <a class="k-button k-button-icontext k-cancel-button" href="\\#"><span class="k-icon k-cancel"></span></a>
                </div>
            </td>
        </tr>
    </table>

</div>
<style>
    .listview {
        width: 500px;
    }

    .image {
        width: 50px;
        height: 50px;
        padding-top: 0px;
        position: relative;
        float: right;
    }
</style>



